@model IEnumerable<gerenciador_de_tarefas.Models.Tarefa>

<p>
    <a asp-action="Create">Novo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)

            </th>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Data)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => tarefa.Id)</td>
                <td>@Html.DisplayFor(model => tarefa.Titulo)</td>
                <td>@Html.DisplayFor(model => tarefa.Descricao)</td>
                <td>@Html.DisplayFor(model => tarefa.Data)</td>
                <td>@Html.DisplayFor(model => tarefa.Status)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@tarefa.Id" class="btn btn-info">
                        <i class="fas fa-info-circle"></i> Detalhar
                    </a>
                    <a asp-action="Edit" asp-route-id="@tarefa.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@tarefa.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Remover
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
